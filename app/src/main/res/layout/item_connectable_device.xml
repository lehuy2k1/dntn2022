<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:foreground="?actionBarItemBackground"
    android:background="@drawable/bg_item_connectable_device"
    android:padding="7dp">

    <ImageView
        android:id="@+id/imv_tv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imv_right"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_device"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toTopOf="@id/tv_protocol_device"
        app:layout_constraintEnd_toStartOf="@id/imv_right"
        app:layout_constraintStart_toEndOf="@id/imv_tv"
        app:layout_constraintTop_toTopOf="@id/imv_tv" />

    <TextView
        android:id="@+id/tv_protocol_device"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="@id/imv_tv"
        app:layout_constraintEnd_toStartOf="@id/imv_right"
        app:layout_constraintStart_toEndOf="@id/imv_tv"
        app:layout_constraintTop_toBottomOf="@id/tv_name_device" />


</androidx.constraintlayout.widget.ConstraintLayout>